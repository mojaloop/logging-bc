{
  "name": "@mojaloop/logging-bc",
  "version": "0.1.0",
  "description": "mojaloop logging bounded context.",
  "license": "Apache-2.0",
  "homepage": "https://github.com/mojaloop/logging-bc",
  "private": true,
  "bugs": {
    "url": "https://github.com/mojaloop/logging-bc/issues#readme"
  },
  "contributors": [
    "Miguel de Barros <miguel.debarros@modusbox.com>",
    "Jason Bruwer <jason.bruwer@coil.com>",
    "Pedro Sousa Barreto <pedrosousabarreto@gmail.com>"
  ],
  "scripts": {
    "prepare": "husky install",
    "start:logging-svc": "npm -w @mojaloop/logging-bc-logging-svc run start",
    "build": "npm -ws run build",
    "docker:build": "npm run build && docker build . -t \"mojaloop/logging-bc-logging-svc\"",
    "watch": "npm -ws --parallel run watch",
    "clean": "rm -Rf dist && npm -ws --parallel run clean",
    "clean:npm": "rm -Rf node_modules && npm -ws --parallel run clean:npm",
    "pretest": "echo 'FIX ME'",
    "standard": "yarn run --no-progress --stream lint'",
    "lint": "npm -ws -p run lint",
    "lint:fix": "npm -ws -p run lint:fix",
    "test:unit": "npm -ws run test:unit",
    "test:coverage": "npm -ws --parallel run test:coverage",
    "test:coverage-check": "npm -ws --parallel run test:coverage-check",
    "test:integration": "npm -ws --parallel --if-present run test:integration",
    "audit:check": "npm -ws --parallel run audit:check",
    "dep:check": "npm exec ncu -e 2 && npm -ws --parallel run dep:check",
    "dep:update": "npm exec ncu -e 2 -u && npm -ws --parallel run dep:update",
    "publish:public-types": "npm -w @mojaloop/logging-bc-public-types-lib run npm_publish",
    "publish:client-lib": "npm -w @mojaloop/logging-bc-client-lib run npm_publish"
  },
  "devDependencies": {
    "@types/jest": "^29.2.2",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "eslint": "^8.27.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "npm-check-updates": "^16.3.18",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  },
  "workspaces": [
    "modules/public-types-lib",
    "modules/client-lib",
    "modules/logging-svc",
    "modules/*"
  ],
  "dependencies": {
    "@mojaloop/logging-bc-client-lib": "file:modules/client-lib"
  }
}
